cSIRsim<-function(NHosts=3, N=1000, SN=c(5,5,5), ST=c(7,8,9))
{
	# simulate data from the model
	params<-list()
	dat.params<-list()
	dat.params$I0<-1
	dat.params$NS<-N
	dat.params$NHosts<-NHosts
	params$B<-matrix(0,nrow=NHosts,ncol=NHosts)
	for (i in seq(1,NHosts))
	{
		params$B[i,i] <- 1
	}
	params$B[1,2]<-0.4
	params$B[2,3]<-0.2
	params$dr<-0.1
	params$lo<-seq(1,sum(SN))
	params$s<-NULL
	a2<-0
	for (i in seq(1,NHosts))
	{
		a1<-a2+1
		a2<-a2+SN[i]
		params$s<-c(params$s,sample(params$lo[a1:a2]))
	}
	params$s<-rev(params$s)
	params$T<-NULL
	dat<-list()
	dat$SN<-SN
	dat$ST<-ST
	tre<-cSIR_drawTre(params, dat.params, dat, Ntries=1000)
}